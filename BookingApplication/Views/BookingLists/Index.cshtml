@model BookingApplication.Models.DTO.BookingListDTO

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">


    <div class="row m-4">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Reservation for Apartment</th>
                    <th scope="col">Number of nights</th>
                    <th scope="col">Price</th>
                    <th></th>
                </tr>
            </thead>
              <tbody>
            @if (Model.Reservations == null)
            {
            <tr>
            <td colspan="5">No active Reservations</td>
            </tr>
            }
            else
            {
            @for (int i = 0; i < Model.Reservations.Count; i++)
            {
            var item = Model.Reservations[i];

            <tr>
            <td>@item.Reservation.Apartment.ApartmentName</td>
            <td>@item.Number_of_nights</td>
            <td>@item.Reservation.Apartment.Price_per_night</td>
            <td><a asp-controller="BookingLists" asp-action="DeleteFromListSingle" asp-route-id="@item.ReservationId" class="btn btn-danger">Delete From List</a></td>
            </tr>
            }
            }
            </tbody>
            <tfoot class="thead-dark">
            <tr>
            <th scope="col">TotalPrice:</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col">$@Model.TotalPrice</th>
            </tr>
            </tfoot>
        </table>
        <a asp-controller="BookingLists" asp-action="bookNow" class="btn btn-danger">Book Now</a>
    </div>

</div>