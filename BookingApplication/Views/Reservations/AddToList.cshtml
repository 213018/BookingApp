@model Book.Domain.Domain.BookReservation;
<h1>Add Reservation in List</h1>

<div class="row">
    <div class="col-4">

        <form asp-action="AddToListConfirmed">
            <input type="hidden" asp-for="ReservationId" />
            <div class="form-group">
                <label asp-for="Number_of_nights"></label>
                <input asp-for="Number_of_nights" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add To List" class="btn-info" />
            </div>
        </form>
    </div>
</div>